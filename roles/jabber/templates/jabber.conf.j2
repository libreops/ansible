server {
    listen [::]:80;
    listen 80;
    server_name {{ vhost }} www.{{ vhost }};
    return 301 https://{{ vhost }}$request_uri;
}

server {
    listen [::]:443 ssl spdy;
    listen 443 ssl spdy;
    server_name {{ vhost }} www.{{ vhost }};

    root /var/www/{{ vhost }}/;
    index index.html;

    ssl_certificate /etc/letsencrypt/live/{{ vhost }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ vhost }}/privkey.pem;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;

    error_log   /var/log/nginx/{{ vhost }}_error.log;

    location /static/ {
        if ($request_method = 'GET') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET';
        }
    }

    location /modules/ {
       return 301 https://gnu.gr/;
    }

    location /jabberbot/ {
       return 301 https://gnu.gr/;
    }

    error_page 404 = /;
}
